<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WalletApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/primary_dark_600</item>
        <item name="colorOnPrimary">@color/neutral_dark_50</item>
        <item name="colorPrimaryContainer">@color/primary_dark_200</item>
        <item name="colorOnPrimaryContainer">@color/primary_dark_900</item>
        
        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/secondary_dark_600</item>
        <item name="colorOnSecondary">@color/neutral_dark_50</item>
        <item name="colorSecondaryContainer">@color/secondary_dark_200</item>
        <item name="colorOnSecondaryContainer">@color/secondary_dark_900</item>
        
        <!-- Tertiary Colors -->
        <item name="colorTertiary">@color/success_dark_main</item>
        <item name="colorOnTertiary">@color/neutral_dark_50</item>
        <item name="colorTertiaryContainer">@color/success_dark_light</item>
        <item name="colorOnTertiaryContainer">@color/success_dark_dark</item>
        
        <!-- Error Colors -->
        <item name="colorError">@color/error_dark_main</item>
        <item name="colorOnError">@color/neutral_dark_50</item>
        <item name="colorErrorContainer">@color/error_dark_light</item>
        <item name="colorOnErrorContainer">@color/error_dark_dark</item>
        
        <!-- Surface Colors -->
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/neutral_dark_900</item>
        <item name="colorSurfaceVariant">@color/surface_variant_dark</item>
        <item name="colorOnSurfaceVariant">@color/neutral_dark_700</item>
        <item name="colorSurfaceContainer">@color/surface_container_dark</item>
        <item name="colorSurfaceContainerHigh">@color/surface_container_high_dark</item>
        
        <!-- Background Colors -->
        <item name="android:colorBackground">@color/surface_dark</item>
        <item name="colorOnBackground">@color/neutral_dark_900</item>
        
        <!-- Outline Colors -->
        <item name="colorOutline">@color/neutral_dark_400</item>
        <item name="colorOutlineVariant">@color/neutral_dark_300</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/primary_dark_600</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@color/surface_dark</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Shape Theme (inherit from light theme) -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.WalletApp.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.WalletApp.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.WalletApp.LargeComponent</item>
    </style>
</resources>