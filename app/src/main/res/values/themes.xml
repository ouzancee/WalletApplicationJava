<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WalletApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/primary_100</item>
        <item name="colorOnPrimaryContainer">@color/primary_900</item>
        
        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/secondary_500</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/secondary_100</item>
        <item name="colorOnSecondaryContainer">@color/secondary_900</item>
        
        <!-- Tertiary Colors -->
        <item name="colorTertiary">@color/success</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/success_light</item>
        <item name="colorOnTertiaryContainer">@color/success_dark</item>
        
        <!-- Error Colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorErrorContainer">@color/error_light</item>
        <item name="colorOnErrorContainer">@color/error_dark</item>
        
        <!-- Surface Colors -->
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/neutral_900</item>
        <item name="colorSurfaceVariant">@color/surface_variant_light</item>
        <item name="colorOnSurfaceVariant">@color/neutral_700</item>
        <item name="colorSurfaceContainer">@color/surface_container_light</item>
        <item name="colorSurfaceContainerHigh">@color/surface_container_high_light</item>
        
        <!-- Background Colors -->
        <item name="android:colorBackground">@color/neutral_50</item>
        <item name="colorOnBackground">@color/neutral_900</item>
        
        <!-- Outline Colors -->
        <item name="colorOutline">@color/neutral_400</item>
        <item name="colorOutlineVariant">@color/neutral_300</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/primary_700</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@color/surface_light</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Shape Theme -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.WalletApp.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.WalletApp.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.WalletApp.LargeComponent</item>
    </style>

    <style name="Theme.WalletApplication" parent="Base.Theme.WalletApplication" />
    
    <!-- Typography Styles -->
    <style name="TextAppearance.WalletApp.DisplayLarge" parent="TextAppearance.Material3.DisplayLarge">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">57sp</item>
        <item name="android:textColor">@color/neutral_900</item>
        <item name="android:fontWeight">400</item>
    </style>
    
    <style name="TextAppearance.WalletApp.DisplayMedium" parent="TextAppearance.Material3.DisplayMedium">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">45sp</item>
        <item name="android:textColor">@color/neutral_900</item>
        <item name="android:fontWeight">400</item>
    </style>
    
    <style name="TextAppearance.WalletApp.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/neutral_900</item>
        <item name="android:fontWeight">600</item>
    </style>
    
    <style name="TextAppearance.WalletApp.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/neutral_900</item>
        <item name="android:fontWeight">600</item>
    </style>
    
    <style name="TextAppearance.WalletApp.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/neutral_900</item>
        <item name="android:fontWeight">500</item>
    </style>
    
    <style name="TextAppearance.WalletApp.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/neutral_900</item>
        <item name="android:fontWeight">500</item>
    </style>
    
    <style name="TextAppearance.WalletApp.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/neutral_800</item>
        <item name="android:fontWeight">400</item>
    </style>
    
    <style name="TextAppearance.WalletApp.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/neutral_700</item>
        <item name="android:fontWeight">400</item>
    </style>
    
    <style name="TextAppearance.WalletApp.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/neutral_700</item>
        <item name="android:fontWeight">500</item>
    </style>
    
    <!-- Shape Styles -->
    <style name="ShapeAppearance.WalletApp.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    
    <style name="ShapeAppearance.WalletApp.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
    
    <style name="ShapeAppearance.WalletApp.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources>